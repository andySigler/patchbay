<?xml version='1.0' encoding='utf-8'?>
<widget id="com.patchbay.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Patchbay</name>
    <description>
        Graphical interface for the Patchbay wireless framework, connecting over BLE.
    </description>
    <author email="andrewsigler1@gmail.com" href="http://andysigler.com">
        Andy Sigler
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="Orientation" value="landscape" />
    <preference name="BackupWebStorage" value="none"/>
</widget>
